    // function getPeopleDataByCircle(radius,center) {
    // //var circlePath="<%=basePath%>searchProjectInfo?op=circle&raidus="
    // //+ radius + "&point=" + center;
    // //jQuery.getJSON(circlePath, function(data) {
    // //showPeopleData(data);
    // //});

    // alert("圆形中心为:"+center+"半径为:"+radius);
    // }



